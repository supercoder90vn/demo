extends ../layout_view

block content
 .spacer
 .container
  .row
   .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
    h1= title
    form.form-horizontal(method='post', action='/articles/add')
     .form-group
      label Title: *
      input.form-control(name='title', type='text', value="#{article.title}")
     .form-group
      label Subtitle:
      input.form-control(name='subtitle', type='text', value="#{article.subtitle}")
     .form-group
      label Category: *
      select.form-control(name='category')
       each category, i in categories
        option(value='#{category.title}') #{category.title}
     .form-group
      label Reporter: *
      input.form-control(name='reporter', type='text', value="#{article.reporter}")
     .form-group
      label Body
      textarea.form-control(name='body') #{article.body}
      
     input.btn.btn-primary(name='submit',type='submit',value='Save') 
     |&nbsp
     a(class='btn btn-default' href='/manage/articles') Back